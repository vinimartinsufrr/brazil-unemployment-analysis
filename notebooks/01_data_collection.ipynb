import requests
import pandas as pd

url = "https://apisidra.ibge.gov.br/values/t/4099/n1/all/v/4099/p/all"

response = requests.get(url)
response.raise_for_status()
data = response.json()

df = pd.DataFrame(data)
df.head()

df = df.iloc[1:].reset_index(drop=True)

df.columns = [
    "territory_id",
    "territory",
    "period",
    "variable_id",
    "variable",
    "unemployment_rate"
]

df.head()

df["period"] = df["period"].astype(str)
df["unemployment_rate"] = df["unemployment_rate"].astype(float)

df.info()

output_path = "../data/raw/unemployment_rate_brazil.csv"
df.to_csv(output_path, index=False)


